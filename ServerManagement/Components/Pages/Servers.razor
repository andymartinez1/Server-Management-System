@page "/servers"


<h3>Servers</h3>
<br/>
<br/>

<div class="container-fluid text-center">
    <div class="row w-50">
        @foreach (var city in _cities)
        {
            <div class="col m-1 flex-grow-0">
                <div class="card" style="width: 8rem;">
                    <img src="@($"/images/{city}.png")" class="card-img-top" alt=""/>
                    <div class="card-body">
                        <button type="button" class="btn btn-primary">@city</button>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<br/>

<ul>
    @foreach (var server in _servers)
    {
        <li>@server.Name in @server.City is <span
                style="color: @(server.IsOnline ? "green" : "red")">@(server.IsOnline ? "online" : "offline")</span>
            &nbsp;
            <a href="/servers/@server.ServerId" class="btn btn-link">Edit</a>
        </li>
    }
</ul>


@code {
    private readonly List<Server> _servers = ServerRepository.GetServersByCity("Toronto");

    private readonly List<string> _cities = CityRepository.GetCities();
}